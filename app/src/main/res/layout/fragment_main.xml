<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adilpatel.pelhamciviccenter.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.33"
                android:layout_height="30dp"
                android:layout_gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Activity"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingLeft="30dp"
                    android:id="@+id/textView10" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.33">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Next Date"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/textView41"
                    android:textAlignment="center" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="0.33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Spots Available"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:id="@+id/textView51"

                    />
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></FrameLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mPickupCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.33"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick up"
                    android:layout_gravity="center"
                    android:paddingLeft="30dp"
                    android:id="@+id/lPickupLabel" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.33">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03/22/16"
                        android:id="@+id/mPickupDate"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:00 pm"
                        android:id="@+id/mPickupTime"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.33"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_gravity="center"
                    android:paddingRight="40dp"
                    android:id="@+id/mPickupSpots"
                    />
            </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mStickPuckCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.33"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stick and puck"
                        android:layout_gravity="center"
                        android:paddingLeft="30dp"
                        android:id="@+id/lStickPuckLabel" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.33">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03/22/16"
                            android:id="@+id/mStickPuckDate"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6:00 pm"
                            android:id="@+id/mStickPuckTime"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="0.33"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_gravity="center"
                        android:paddingRight="40dp"
                        android:id="@+id/mStickPuckSpots"
                        />
                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mPublicSkateCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.33"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public Skate"
                        android:layout_gravity="center"
                        android:paddingLeft="30dp"
                        android:id="@+id/lPublickSkateLabel" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.33">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04/2/16"
                            android:id="@+id/mPublicSkateDate"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 am"
                            android:id="@+id/mPublicSkateTime"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="0.33"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NA"
                        android:layout_gravity="center"
                        android:paddingRight="40dp"
                        android:id="@+id/mPublicSkateSpots"
                        />
                </FrameLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
